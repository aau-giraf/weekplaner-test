<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="WeekPlanner.Themes.RedTheme"
    xmlns:views="clr-namespace:WeekPlanner.Views;assembly=WeekPlanner">
    
    <Color x:Key="NavBarColor">#ff4444</Color>
    <Style
        TargetType="Button">
        <Setter
            Property="BackgroundColor"
            Value="{StaticResource RedThemeColor}" />
        <Setter
            Property="TextColor"
            Value="White" />
    </Style>
        <Style
        TargetType="views:CustomNavigationPage">
        <Setter
            Property="BarBackgroundColor"
            Value="{StaticResource RedThemeColor}" />
        <Setter
            Property="BarTextColor"
            Value="White" />
    </Style>
</ResourceDictionary>